<div id="invoice" class="invoice">
    <div class="container d-flex justify-content-center my-5">
        <div class="card text-center" style="width: 400px;">
            <div class="card-header d-flex justify-content-between ">
                <div class="kiri">
                    <span style="color: #fff; font-weight: bolder; font-size: 14px;">BROMOUNT</span>
                </div>
                <div class="kanan">
                    <span onclick="document.getElementById('invoice').style.display='none'" class="close"
                        title="Close">Ã—</span>
                </div>
            </div>
            <div class="card-body">
                {{#each invoice}}
                <h5 class="card-title" style="font-weight: bolder;">{{formatCurrency this.totalAmountPrice}}</h5>
                <p style="margin-top: -10px;" class="card-text ">{{this.orderId.statusOrder}}</p>
                <div class="top border border-dark d-flex justify-content-between p-2" style="border-width:medium;">
                    <div class="left text-start">
                        <p>purchased</p>
                        <p>payment method</p>
                    </div>
                    <div class="right text-end">
                        <p>{{this.transactionDate}}</p>
                        <p>{{this.method}}</p>
                    </div>
                </div>
                {{/each}}
                <div class="top border mt-3 border-dark d-flex justify-content-between p-2"
                    style="border-width:medium;">
                    <div class="left text-start">
                        <p style="margin-bottom: 0;">Via</p>
                        <p style="margin-top: -5px; margin-bottom: 0;">{{this.orderId.userId}}</p>
                        <p style="margin-top: -5px; margin-bottom: 0;">{{this.orderId.packageId.via}}</p>
                        <p style="margin-top: -5px; margin-bottom: 0;">ansi Pronowo</p>
                    </div>
                    <div class="right text-end">
                        <p>Rp 1.700.000</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>