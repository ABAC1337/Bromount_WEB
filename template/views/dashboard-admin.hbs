        rel="stylesheet">
    <!-- Google Fonts End -->


    <!-- Title Logo Start -->
    <title>Bromount</title>
    <link rel="icon" href="/images/logo baru ajay.png" type="images/x-icon">
    <!-- Title Logo End -->
</head>

<body style="background-color: #F9F9F9;">

    
    <div class="warning" id='warning'>
        <div class="container d-flex justify-content-center mt-5">
            <div class="card">
                <div class="card-body" style="text-align: center;">
                    <div class="logo">
                        <img src="/images/logo2.png" alt="" height="35">
                    </div>
                    <div class="warning-card" style="font-size: 20px;">
                        <span>are you sure want delete ?</span>
                    </div>
                    <div class="input d-flex">
                        <form action="/dashboard/admin/delete" method="post" id="delete-form" style="flex: 1;" >
                            <input type="hidden" name="id" id="delete-id">
                            <button style="width: 100%;" type="submit">Yes</button>
                        </form>
                        <button type="button"
                            onclick="document.getElementById('warning').style.display='none'" style="flex: 1;">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-admin-edit" id="edit">
        <div class="container d-flex justify-content-center my-5">
            <div class="edit">
                <div class="right d-flex justify-content-between">
                    <img src="/images/logo2.png" alt="" height="35px">
                    <span onclick="document.getElementById('edit').style.display='none'" class="close"
                        title="Close Edit">&times;</span>
                </div>
                <hr>
                <div class="text-center">
                <h4 style="font-weight: bold;">EDIT PACKAGES</h4>
                </div>
                <div class="input">
                    <form enctype="multipart/form-data" action="/dashboard/admin/update" method="POST">
                        <input type="number" name="harga" placeholder="Price" />
                        <input type="file" name="foto" placeholder="input kan foto" accept="image/*" />
                        <input type="text" name="rute_1" placeholder="rute 1" />
                        <input type="text" name="rute_2" placeholder="rute 2" />
                        <input type="text" name="rute_3" placeholder="rute 3" />
                        <input type="text" name="rute_4" placeholder="rute 4" />
                        <input type="hidden" value="Edit" name="id" id="update" />
                        <button
                            style="background-color: #FF7A00; border: none; font-weight: bolder; color: #fff;">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-admin-add " id="add">
        <div class="container d-flex justify-content-center my-5">
            <div class="add">
                <div class="right d-flex justify-content-between">
                    <img src="/images/logo2.png" alt="" height="35px">
                    <span onclick="document.getElementById('add').style.display='none'" class="close"
                        title="Close Add">&times;</span>
                </div>
                <div class="input">
                    <form enctype="multipart/form-data" action="/dashboard/admin/create" method="POST">
                        <input type="number" name="harga" placeholder="Price" required />
                        <input type="text" name="nohp" placeholder="Contact" required />
                        <input type="file" name="foto" placeholder="input kan foto" accept="image/*" required />
                        <input type="text" name="rute_1" placeholder="rute 1" required />
                        <input type="text" name="rute_2" placeholder="rute 2" />
                        <input type="text" name="rute_3" placeholder="rute 3" />
                        <input type="text" name="rute_4" placeholder="rute 1" />
                        <input type="submit" value="Add"
                            style="background-color: #FF7A00; border: none; font-weight: bolder; color: #fff; " />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="header-admin">
        <nav class="navbar navbar-expand-lg navbar-light justify-content-center fs-6 p-2"
            style="  align-items: center;">
            <div class="container-fluid">
                <div class="logo d-flex align-items-center text-start">
                    <a class="navbar-brand " href="#">
                        <img src="/images/Group 16.png" alt="" height="50px">
                    </a>
                    <div class="word">
                        <span>
                            {{#if username}}
                            Welcome, {{username}}
                            {{/if}}
                        </span>
                        <div class="div">
                            <span>Admin Malang</span>
                        </div>
                    </div>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-center" id="navbarNav">
                    <div class="kanan ">
                        <div class="word ">
                            <div class="logout-admin my-1">
                                <button class="mx-1" type="button">Change Admin</button>
                            </div>
                            <div class="logout-admin">
                                <form id="logoutForm" action="/dashboard/logout" method="post">
                                    <button type="submit" class="btn"
                                        style="background-color: #ff7a00; color :#fff; font-weight:bolder;border-radius: 15px;margin-left: 30px;">Log
                                        Out</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    {{>table_admin}}
    <!-- Bootstrap js  Start -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!-- Boostrap js End -->

    <script src="/js/main.js"></script>
</body>

</html>