<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS Start -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
    <!-- Bootstrap CSS End -->

    <!-- sweetalert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <title>Login</title>
    <link rel="icon" href="/images/3.png" type="images/x-icon">
</head>

<body>
    <div class="form-register" id="id01" style="display:none;">
        <form action="/register" method="post">
            <div class="container d-flex justify-content-center">
                <div class="card mb-3 mt-5">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-body">
                                <div class="mb-4 d-flex justify-content-between">
                                    <div class="left">
                                        <h4 style="font-weight: bolder;">Sign Up</h4>
                                        <span>Unlock a world of travel with one account across Bromunt </span>
                                    </div>
                                    <div class="right">
                                        <span onclick="document.getElementById('id01').style.display='none'"
                                            class="close" title="Close Modal">&times;</span>
                                    </div>
                                </div>
                                <div class="mb-1">
                                    <label class="form-label">Username</label>
                                    <input type="text" name="username_register" id="username-register"
                                        placeholder="Username" class="form-control">
                                </div>
                                <div class="mb-1">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="email_register" id="email-register" placeholder="Email"
                                        class="form-control">
                                </div>
                                <div class="mb-1">
                                    <label class="form-label">Password</label>
                                    <input type="password" name="password_register" id="password-register"
                                        placeholder="Password" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Confirm Password</label>
                                    <input type="password" name="confirm_password" id="confirm-password-register"
                                        placeholder="Confirm Password" class="form-control">
                                </div>
                                <div class="mb-3 mt-2">
                                    <button type="submit" class="btn w-100 text-white font-weight-bold"
                                        style="font-size: 25px; background-color: #ff7a00;">Sign
                                        Up</button>
                                </div>
                                <div class="mb-3 mt-2">
                                    <p>Already have an account? <span
                                            onclick="document.getElementById('id01').style.display='none'"
                                            class="text-primary" style="cursor: pointer;">Sign in</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="form">
        <div class="container d-flex justify-content-center">
            <div class="card mb-3 mt-5">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-body">
                            <div class="mb-4">
                                <h4 style="font-weight: bolder;">Sign In</h4>
                                <span>Unlock a world of travel with one account across Bromunt</span>
                            </div>
                            <div id="message" class="alert alert-danger d-none" role="alert">
                                Incorrect username or password.
                            </div>
                            <form action="/login" method="post">
                                <div class="mb-1">
                                    <label for="username-login" class="form-label">Username</label>
                                    <input type="text" name="username_login" id="username-login" placeholder="Username"
                                        class="form-control">
                                </div>
                                <div class="mb-1">
                                    <label for="password-login" class="form-label">Password</label>
                                    <input type="password" name="password_login" id="password-login"
                                        placeholder="Password" class="form-control">
                                </div>
                                <div class="mb-3 mt-2">
                                    <button type="submit" class="btn w-100 text-white font-weight-bold"
                                        style="font-size: 25px; background-color: #ff7a00;">Sign
                                        in</button>
                            </form>
                            <div class="mb-3 mt-2">
                                <p>Create <span onclick="document.getElementById('id01').style.display='block'"
                                        class="text-primary" style="cursor: pointer;">account</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="foot">
        <div class="container text-center">
            <p style="margin-top: 50px;">All rights reserved.</p>
            <p style="margin-top: -15px;">Copyright (2024 - 2024) - Bromunt</p>
            <img src="/images/logo2.png" alt="Logo" style="height: 55px; margin-top: 10px;">
        </div>
    </div>

    <!-- Bootstrap js  Start -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!-- Bootstrap js End -->

    <!-- Script to handle form error display -->
    <script>
        {{#if showErrorReg}}
        document.getElementById('id01').style.display = 'block';
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '{{error}}'
        });
        {{/if}}

         {{#if showErrorLog}}
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '{{error}}',
            color: '#212529'
        });
        {{/if}}
    </script>

</body>

</html>
